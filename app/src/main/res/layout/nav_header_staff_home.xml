<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:id="@+id/staff_nav_header"
    android:background="@drawable/staff_gradient"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="vertical"
    android:gravity="center">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/profile_holder" android:id="@+id/staff_profile" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/staffNameTV"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingTop="12dp" android:text="loading.."
        android:textSize="22dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/Staff"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center"/>



</LinearLayout>
