<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/graylight"
    android:id="@+id/fragment_admin_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.marquesevadera.lotr.Fragments.Admin.AdminNavProfile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/admin_gradient"
            android:layout_width="match_parent"
            android:layout_height="400dp">

                <ImageView
                    android:id="@+id/admin_profile_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/profile_holder"/>

                <EditText
                    android:id="@+id/admin_name_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:enabled="false"
                    android:layout_marginTop="10dp"
                    android:text="Mang Tomas"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/Admin"

                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>


            <include layout="@layout/admin_profile_board"/>
        </LinearLayout>




            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@android:color/black"
                android:text="____________INFO____________"/>


        <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:text="Branch"/>
        <EditText
            android:id="@+id/edit_branch"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Branch"
            android:inputType="text"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="Valenzuela"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:text="Mobile"/>
            <EditText
                android:id="@+id/edit_phone"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="0916 797 3808"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:text="Address"/>

        <EditText
            android:id="@+id/edit_address"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:enabled="false"
            android:inputType="text"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:text="Santiago St. Gen. T. Deleon"/>

        <Space
            android:layout_height="40dp"
            android:layout_width="match_parent">
        </Space>


    </LinearLayout>

</ScrollView>
